.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:pastes, :index)
      %li=link_to pat(:new), url(:pastes, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:pastes)
    .inner
      %table.table
        %tr
          %th.first=mat(:paste, :title)
          %th=mat(:paste, :paste)
          %th=mat(:paste, :type)
          %th=mat(:paste, :created_at)
          %th=mat(:paste, :updated_at)
          %th.last="&nbsp;"
        -@pastes.each do |paste|
          %tr
            %td.first=paste.title
            %td=paste.paste
            %td=paste.type
            %td=paste.created_at
            %td=paste.updated_at
            %td.last
              =button_to pat(:edit), url(:pastes, :edit, :id => paste.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:pastes, :destroy, :id => paste.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")